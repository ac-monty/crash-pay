{
    "family": "fake-fintech-model-retrain",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "512",
    "memory": "1024",
    "executionRoleArn": "arn:aws:iam::<AWS_ACCOUNT_ID>:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::<AWS_ACCOUNT_ID>:role/fake-fintech-model-retrain-role",
    "runtimePlatform": {
        "operatingSystemFamily": "LINUX",
        "cpuArchitecture": "X86_64"
    },
    "containerDefinitions": [
        {
            "name": "model-retrain",
            "image": "<AWS_ACCOUNT_ID>.dkr.ecr.<AWS_REGION>.amazonaws.com/fake-fintech/model-retrain:latest",
            "essential": true,
            "environment": [
                {
                    "name": "APP_ENV",
                    "value": "production"
                },
                {
                    "name": "TRAINING_DROP_PATH",
                    "value": "/training-drops"
                },
                {
                    "name": "MODEL_OUTPUT_PATH",
                    "value": "/models"
                },
                {
                    "name": "PYTHONUNBUFFERED",
                    "value": "1"
                }
            ],
            "secrets": [
                {
                    "name": "OPENAI_API_KEY",
                    "valueFrom": "arn:aws:secretsmanager:<AWS_REGION>:<AWS_ACCOUNT_ID>:secret:fake-fintech/openai-api-key"
                },
                {
                    "name": "HUGGINGFACE_API_TOKEN",
                    "valueFrom": "arn:aws:secretsmanager:<AWS_REGION>:<AWS_ACCOUNT_ID>:secret:fake-fintech/huggingface-api-token"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "training-drops",
                    "containerPath": "/training-drops",
                    "readOnly": false
                },
                {
                    "sourceVolume": "model-output",
                    "containerPath": "/models",
                    "readOnly": false
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/fake-fintech/model-retrain",
                    "awslogs-region": "<AWS_REGION>",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "python -c 'import sys; sys.exit(0)' || exit 1"
                ],
                "interval": 60,
                "timeout": 10,
                "retries": 3,
                "startPeriod": 30
            }
        },
        {
            "name": "filebeat-sidecar",
            "image": "docker.elastic.co/beats/filebeat:8.12.2",
            "essential": false,
            "cpu": 64,
            "memory": 128,
            "environment": [
                {
                    "name": "ELASTICSEARCH_HOSTS",
                    "value": "https://<AWS_ELASTICSEARCH_ENDPOINT>:443"
                }
            ],
            "secrets": [
                {
                    "name": "ELASTICSEARCH_USERNAME",
                    "valueFrom": "arn:aws:secretsmanager:<AWS_REGION>:<AWS_ACCOUNT_ID>:secret:fake-fintech/elasticsearch-user"
                },
                {
                    "name": "ELASTICSEARCH_PASSWORD",
                    "valueFrom": "arn:aws:secretsmanager:<AWS_REGION>:<AWS_ACCOUNT_ID>:secret:fake-fintech/elasticsearch-password"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "varlog",
                    "containerPath": "/var/log"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/fake-fintech/model-retrain/filebeat",
                    "awslogs-region": "<AWS_REGION>",
                    "awslogs-stream-prefix": "filebeat"
                }
            }
        }
    ],
    "volumes": [
        {
            "name": "varlog",
            "host": {
                "sourcePath": "/var/log"
            }
        },
        {
            "name": "training-drops",
            "host": {
                "sourcePath": "/mnt/training-drops"
            }
        },
        {
            "name": "model-output",
            "host": {
                "sourcePath": "/mnt/models"
            }
        }
    ]
}