{
  "family": "fake-fintech-transaction-service",
  "taskRoleArn": "arn:aws:iam::<AWS_ACCOUNT_ID>:role/fake-fintech-tasks-role",
  "executionRoleArn": "arn:aws:iam::<AWS_ACCOUNT_ID>:role/fake-fintech-execution-role",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "runtimePlatform": {
    "operatingSystemFamily": "LINUX",
    "cpuArchitecture": "X86_64"
  },
  "containerDefinitions": [
    {
      "name": "transaction-service",
      "image": "<AWS_ACCOUNT_ID>.dkr.ecr.<AWS_REGION>.amazonaws.com/fake-fintech/transaction-service:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 4002,
          "hostPort": 4002,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "SERVICE_NAME",
          "value": "transaction-service"
        },
        {
          "name": "PORT",
          "value": "4002"
        },
        {
          "name": "POSTGRES_HOST",
          "value": "fake-fintech-rds.cluster-xyz.us-east-1.rds.amazonaws.com"
        },
        {
          "name": "POSTGRES_DB",
          "value": "fakefintech"
        },
        {
          "name": "POSTGRES_PORT",
          "value": "5432"
        },
        {
          "name": "MONGO_URI",
          "value": "mongodb://fake-fintech-docdb.cluster-xyz.us-east-1.docdb.amazonaws.com:27017/fakefintech"
        },
        {
          "name": "LOG_LEVEL",
          "value": "info"
        },
        {
          "name": "JWT_EXPIRES_IN",
          "value": "30d"
        }
      ],
      "secrets": [
        {
          "name": "POSTGRES_USER",
          "valueFrom": "arn:aws:secretsmanager:<AWS_REGION>:<AWS_ACCOUNT_ID>:secret:fake-fintech/postgres-user"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:<AWS_REGION>:<AWS_ACCOUNT_ID>:secret:fake-fintech/postgres-password"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:<AWS_REGION>:<AWS_ACCOUNT_ID>:secret:fake-fintech/jwt-secret"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fake-fintech/transaction-service",
          "awslogs-region": "<AWS_REGION>",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:4002/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 10
      }
    },
    {
      "name": "filebeat",
      "image": "docker.elastic.co/beats/filebeat:8.12.2",
      "essential": false,
      "memoryReservation": 128,
      "environment": [
        {
          "name": "ELASTICSEARCH_HOSTS",
          "value": "https://<AWS_ELASTICSEARCH_ENDPOINT>:443"
        }
      ],
      "secrets": [
        {
          "name": "ELASTICSEARCH_USERNAME",
          "valueFrom": "arn:aws:secretsmanager:<AWS_REGION>:<AWS_ACCOUNT_ID>:secret:fake-fintech/elasticsearch-user"
        },
        {
          "name": "ELASTICSEARCH_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:<AWS_REGION>:<AWS_ACCOUNT_ID>:secret:fake-fintech/elasticsearch-password"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "varlog",
          "containerPath": "/var/log"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fake-fintech/transaction-service/filebeat",
          "awslogs-region": "<AWS_REGION>",
          "awslogs-stream-prefix": "filebeat"
        }
      }
    }
  ],
  "volumes": [
    {
      "name": "varlog",
      "host": {}
    }
  ]
}