{
    "family": "fake-fintech-frontend",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::<AWS_ACCOUNT_ID>:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::<AWS_ACCOUNT_ID>:role/fake-fintech-frontend-role",
    "runtimePlatform": {
        "operatingSystemFamily": "LINUX",
        "cpuArchitecture": "X86_64"
    },
    "containerDefinitions": [
        {
            "name": "frontend",
            "image": "<AWS_ACCOUNT_ID>.dkr.ecr.<AWS_REGION>.amazonaws.com/fake-fintech/frontend:latest",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "NODE_ENV",
                    "value": "production"
                },
                {
                    "name": "API_GATEWAY_URL",
                    "value": "https://api.fake-fintech.com"
                },
                {
                    "name": "REACT_APP_API_BASE_URL",
                    "value": "https://api.fake-fintech.com"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/fake-fintech/frontend",
                    "awslogs-region": "<AWS_REGION>",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:80/ || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 10
            }
        },
        {
            "name": "filebeat-sidecar",
            "image": "docker.elastic.co/beats/filebeat:8.12.2",
            "essential": false,
            "cpu": 64,
            "memory": 128,
            "environment": [
                {
                    "name": "ELASTICSEARCH_HOSTS",
                    "value": "https://<AWS_ELASTICSEARCH_ENDPOINT>:443"
                }
            ],
            "secrets": [
                {
                    "name": "ELASTICSEARCH_USERNAME",
                    "valueFrom": "arn:aws:secretsmanager:<AWS_REGION>:<AWS_ACCOUNT_ID>:secret:fake-fintech/elasticsearch-user"
                },
                {
                    "name": "ELASTICSEARCH_PASSWORD",
                    "valueFrom": "arn:aws:secretsmanager:<AWS_REGION>:<AWS_ACCOUNT_ID>:secret:fake-fintech/elasticsearch-password"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "varlog",
                    "containerPath": "/var/log"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/fake-fintech/frontend/filebeat",
                    "awslogs-region": "<AWS_REGION>",
                    "awslogs-stream-prefix": "filebeat"
                }
            }
        }
    ],
    "volumes": [
        {
            "name": "varlog",
            "host": {
                "sourcePath": "/var/log"
            }
        }
    ]
}